{
    "scopeName": "source.uc",
    "fileTypes": ["uc", "uci"],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#types"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.uc",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.uc",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.uc",
                    "match": "\\b(class|function|event|state|defaultproperties|var|const|local|static|final|native|simulated|exec|reliable|unreliable|client|server|replication|if|else|for|while|do|switch|case|default|break|continue|return|foreach|assert|stop|goto|label)\\b"
                },
                {
                    "name": "keyword.operator.uc",
                    "match": "\\b(new|delete|super|self|none|true|false|default)\\b"
                },
                {
                    "name": "keyword.modifier.uc",
                    "match": "\\b(abstract|auto|coerce|config|editconst|editinline|export|globalconfig|input|localized|noexport|nontransient|notplaceable|placeable|private|protected|public|transient|travel)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.uc",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.uc",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.uc",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.uc",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.uc",
                    "match": "\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?[fF]?\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.uc",
                    "match": "[\\+\\-\\*/%=<>!&|\\^~]"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "support.type.uc",
                    "match": "\\b(int|float|string|bool|byte|name|object|vector|rotator|coords|plane|matrix|quat|range|rangevector|color|linearcolor|struct|enum|array|delegate|interface|class)\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.uc",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.other.uc",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    }
}
