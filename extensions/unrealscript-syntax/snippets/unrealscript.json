{
    "Class Definition": {
        "prefix": "class",
        "body": [
            "class ${1:ClassName} extends ${2:ParentClass};",
            "",
            "// Default properties",
            "defaultproperties",
            "{",
            "\t${3:// Properties here}",
            "}"
        ],
        "description": "Create a new UnrealScript class"
    },
    "Function Definition": {
        "prefix": "function",
        "body": [
            "function ${1:ReturnType} ${2:FunctionName}(${3:Parameters})",
            "{",
            "\t${4:// Function body}",
            "}"
        ],
        "description": "Create a new function"
    },
    "Event Definition": {
        "prefix": "event",
        "body": [
            "event ${1:EventName}(${2:Parameters})",
            "{",
            "\t${3:// Event body}",
            "}"
        ],
        "description": "Create a new event"
    },
    "State Definition": {
        "prefix": "state",
        "body": [
            "state ${1:StateName}",
            "{",
            "\t${2:// State functions and events}",
            "}"
        ],
        "description": "Create a new state"
    },
    "Variable Declaration": {
        "prefix": "var",
        "body": [
            "var ${1:Type} ${2:VariableName};"
        ],
        "description": "Declare a variable"
    },
    "If Statement": {
        "prefix": "if",
        "body": [
            "if (${1:condition})",
            "{",
            "\t${2:// Code}",
            "}"
        ],
        "description": "Create an if statement"
    },
    "For Loop": {
        "prefix": "for",
        "body": [
            "for (${1:initialization}; ${2:condition}; ${3:increment})",
            "{",
            "\t${4:// Code}",
            "}"
        ],
        "description": "Create a for loop"
    },
    "While Loop": {
        "prefix": "while",
        "body": [
            "while (${1:condition})",
            "{",
            "\t${2:// Code}",
            "}"
        ],
        "description": "Create a while loop"
    },
    "Switch Statement": {
        "prefix": "switch",
        "body": [
            "switch (${1:expression})",
            "{",
            "\tcase ${2:value}:",
            "\t\t${3:// Code}",
            "\t\tbreak;",
            "\t",
            "\tdefault:",
            "\t\t${4:// Default code}",
            "\t\tbreak;",
            "}"
        ],
        "description": "Create a switch statement"
    },
    "Default Properties": {
        "prefix": "defaultproperties",
        "body": [
            "defaultproperties",
            "{",
            "\t${1:// Properties}",
            "}"
        ],
        "description": "Create default properties block"
    }
}
